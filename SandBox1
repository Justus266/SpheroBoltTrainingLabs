async function startProgram() {
	setMainLed(getRandomColor())    //The bolt will set a random color 
	await roll(360, 100, 2)         //Bolt will turn 360 degrees and will move in that direction at 100 speed for 2 seconds
	setMainLed({ r: 255, g: 0, b: 0}) // color will be red 
	await spin(90, 1)     // bolt will turn 90 degrees
	await roll(90, 50, 2) // bolt will move forward at 50 speed for 2 seconds
	setMainLed({ r: 0, g: 0, b: 255 }) // bolt color will be blue
	await roll(270, 100, 3)    //Bolt turns 270 degrees and moves forward at 100 speed for 3 seconds
	await delay(2) // bolt will wait for 2 seconds
	await roll(90, 80, 2)   //Bolt will turn 90 degrees and go forward at 80 speed for 2 seconds
	setMainLed({ r: 125, g: 0, b:125  })// bolt will turn half blue half red to make a pink color
	await roll(180, 125,1.75)// wolt will turn 180 degrees and go forward at 125 speed for 1.75 seconds
	await delay(2)  // bolt will wait for 2 seconds
	await spin(180, 1) // Bolt will turn 180 degrees
	stopRoll() //Bolt will stop moving
